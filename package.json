{
  "name": "terminus",
  "version": "1.0.0",
  "description": "GenUI-powered desktop terminal with Tambo SDK",
  "main": "dist-electron/main.js",
  "author": "Mohit & Anuj Kumar Upadhyay",
  "homepage": "https://github.com/anuj123upadhyay/terminus",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "electron:compile": "tsc -p tsconfig.electron.json",
    "electron:dev": "npm run electron:compile && concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && npm run electron:compile && electron-builder",
    "electron:preview": "npm run build && npm run electron:compile && electron .",
    "rebuild": "electron-rebuild -f -w node-pty",
    "postinstall": "electron-rebuild",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tambo-ai/react": "^0.69.1",
    "@tiptap/extension-document": "^3.19.0",
    "@tiptap/extension-hard-break": "^3.19.0",
    "@tiptap/extension-mention": "^3.19.0",
    "@tiptap/extension-paragraph": "^3.19.0",
    "@tiptap/extension-placeholder": "^3.19.0",
    "@tiptap/extension-text": "^3.19.0",
    "@tiptap/react": "^3.19.0",
    "@tiptap/suggestion": "^3.19.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dockerode": "^4.0.2",
    "dompurify": "^3.3.1",
    "framer-motion": "^11.18.2",
    "highlight.js": "^11.11.1",
    "json-stringify-pretty-compact": "^4.0.0",
    "lucide-react": "^0.468.0",
    "node-pty": "^1.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-markdown": "^10.1.0",
    "recharts": "^3.7.0",
    "simple-git": "^3.22.0",
    "streamdown": "^2.1.0",
    "systeminformation": "^5.21.0",
    "tailwind-merge": "^3.4.0",
    "use-debounce": "^10.1.0",
    "zod": "^3.23.8",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@types/dockerode": "^3.3.23",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.terminus.app",
    "productName": "Terminus",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png"
    }
  }
}
